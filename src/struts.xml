<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<package name="default"  extends="struts-default" namespace="/">
		
		<!-- tb_userAction -->
		<action name="tbUser_*" class="tbUserAction" method="{1}">
			
		</action>
		
		<!-- tb_user_detailAction -->
		<action name="tbUserDetail_*" class="tbUserDetailAction" method="{1}">
			<result name="queryAllOk">/userDetail.jsp</result>
			<result name="loadOk">/updateUser.jsp</result>
		</action>
		
		<!-- usersAction -->
		<action name="users_*" class="usersAction" method="{1}">
			<result name="loginFail">user/login.jsp</result>
			<result name="loginOk">/index.jsp</result>
			<result name="logout">/index.jsp</result>
			<result name="isNotLogin">user/updateUser.jsp</result>
			<result name="registerFali">user/Register.jsp</result>
		</action>
		
		
		<!-- problemAction -->
		<action name="problem_*" class="problemAction" method="{1}">
		</action>
		
		<!--judgeAction -->
		<action name="rejudge_*" class="rejudge" method="{1}">
		</action>
	</package>

</struts>    
